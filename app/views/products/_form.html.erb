<%=form_for @product do |f| %>

<div class="row">
<div class="col-5 right">
<span>Product name</span>
</div>
<div class="col-7 left" >
<%= f.text_field :product_name, :required => true %>
</div>
</div>
<div class="row">
<div class="col-5 right">
    <span>Product description</span>
</div>
<div class="col-7 left" >
<%= f.text_area :product_desc1, :required => true %>
</div>
</div>
<div class="row">
<div class="col-5 right">
    <span>Product description 2</span>
</div>
<div class="col-7 left" >
<%= f.text_area :product_desc2, :required => true %>
</div>
</div>
<div class="row">
<div class="col-5 right">
    <span>Price</span>
</div>
<div class="col-7 left" >
<%= f.text_area :price, :required => true %>
</div>
</div>
<div class="row">
<div class="col-5 right">
    <span>Image</span>
</div>
<div class="col-7 left" >
<%= f.text_area :image, :required => true %>
</div>
</div>

        <%= f.submit "Submit", :class=> "case3a"%>
        <% end %>
